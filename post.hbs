{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

{{#contentFor "initHighlight"}}
    <script>hljs.initHighlightingOnLoad();</script>
{{/contentFor}}

{{> "header"}}

{{> "navbar"}}

<main class="container" role="main">

    <article class="row {{post_class}}">

        <header class="col-xs-12">
            <section>
                <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> {{tags prefix="&nbsp;<span class='fa fa-tags'></span>&nbsp;"}}
            </section>
            <h1 class="title">{{title}}</h1>
        </header>

        <section class="col-xs-12">
            {{content}}
        </section>

        <footer class="col-xs-12 author">
            
            <hr>

        {{#author}}
            <section>
                <div class="col-xs-12 well">
                    {{#if image}}
                    <figure>
                        <a href="{{url}}">
                            {{#if image}}<img class="img-circle" src="{{image}}" alt="Author image" nopin="nopin" />{{/if}}
                            <span class="hidden">{{name}}'s Picture</span>
                        </a>
                    </figure>
                    {{/if}}

                    <div class="col-xs-10 pull-right">
                        <h6><a href="{{url}}">{{name}}</a></h6>
                        {{#if bio}}
                            {{bio}}
                        {{else}}
                            Read <a href="{{url}}">more posts</a> by this author.
                        {{/if}}
                        <div>
                            {{#if location}}<span class="fa fa-map-marker"> {{location}}</span>&nbsp;{{/if}}
                            {{#if website}}<span class="fa fa-chain"><a href="{{website}}"> {{website}}</a>&nbsp;</span>{{/if}}
                        </div>
                    </div>
                </div>

            </section>

        {{/author}}

        </footer>

    </article>
    
